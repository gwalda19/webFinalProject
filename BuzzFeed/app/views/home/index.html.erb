<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %></h1>

<% cache ['home', Article.latest] do %>
  <% @articles.each do |article| %>
    <% cache ['entry', article] do %>
      <div class="entry">
      	<br>
        <%= image_tag(article.image_url) %>
        <h2><%= sanitize(article.title) %></h2>
        <p><%= sanitize(article.byline) %></p>
        <p><%= sanitize(article.name) %></p>
        <br>
      </div>
    <% end %>
  <% end %>
<% end %>
