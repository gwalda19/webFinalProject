<!DOCTYPE html>
<html>
<head>
  <title>BuzzFeed</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller.controller_name %>" >
  <div id="banner">
    <%= image_tag("logo.png", :size => "44x44") %>
    <%= @page_title || t('.title_html') %>
  </div>

  <div id="columns">
    <div id="leftside">
      <ul>
        <li><%= link_to t('.home'), home_url %></li>

        <% if session[:user_id] == nil %>
          <li><%= link_to t('.login_html'), login_path %></li>
          <li><%= link_to t('.createUser'), new_user_path %></li>
        <% end %>
      </ul>

      <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Users',          users_path    %></li>
          <li><%= link_to "Settings",       user_path(session[:user_id]) %></li>
          <li><%= link_to "Create Article", new_article_path %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete %>
      <% end %>

    </div>
    <div id="main">
      <%= yield %>
    </div>
  <div id="rightside">
  	<br><br><br>
  </div>
</body>
</html>
